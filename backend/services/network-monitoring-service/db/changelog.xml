<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="create-network-record-log-scheme" author="nord">

        <createTable tableName="network_record_log" remarks="Журнал показаний доступности сети">
            <column autoIncrement="true" name="id" type="BIGINT" remarks="Идентификатор">
                <constraints primaryKey="true" primaryKeyName="pk_network_record_log"/>
            </column>
            <column name="device_id" type="VARCHAR(32)" remarks="ID устройства">
                <constraints nullable="false" />
            </column>
            <column name="device_timestamp" type="TIMESTAMP" remarks="Время фиксации показаний устройством">
                <constraints nullable="false"/>
            </column>
            <column name="record_timestamp" type="TIMESTAMP" remarks="Время регистрации показаний">
                <constraints nullable="false"/>
            </column>

            <column name="network_record_log" type="BOOLEAN" remarks="Статус доступности сети">
                <constraints nullable="false" />
            </column>
        </createTable>

        <createIndex tableName="network_record_log" indexName="ix_network_record_log_device_id" unique="false">
            <column name="device_id" />
        </createIndex>
        <createIndex tableName="network_record_log" indexName="ix_network_record_log_device_timestamp" unique="false">
            <column name="device_timestamp" />
        </createIndex>
    </changeSet>
</databaseChangeLog>
